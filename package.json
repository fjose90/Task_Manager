    "scripts": {
        "start": "node ./build/main",
        "build": "rimraf build && tsc -p tsconfig-build.json",
        "lint": "eslint .",
        "lint:fix": "yarn lint -- --fix",
        "test": "jest --passWithNoTests --no-cache --runInBand",
