        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^5.0.0",
        "husky": "^7.0.4",
        "jest": "^27.4.5",
        "jest-mock-extended": "^2.0.4",
        "lint-staged": "^12.1.2",
        "ts-jest": "^27.1.1",
        "typescript": "*"
    },
    "engines": {
        "node": "16.x"
    },
    "dependencies": {
        "module-alias": "^2.2.2",
        "rimraf": "^3.0.2"
